<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="12dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="#DDDDDD"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_profile_image"
                android:src="@drawable/ic_launcher_background"
                android:clipToOutline="true"
                android:outlineProvider="background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/profileNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileImage"
                tools:text=""
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/brightBlue"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:id="@+id/profileDetailsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileNameText"
                tools:text=""
                android:textAlignment="center"
                android:maxLines="2"
                android:textSize="18sp"
                android:textColor="@color/mediumGray"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/actionIconsConstraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileDetailsText"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/crossIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_profile_icons"
                    android:padding="8dp"
                    android:src="@drawable/cross_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#F44336" />

                <ImageView
                    android:id="@+id/checkIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="70dp"
                    android:background="@drawable/bg_profile_icons"
                    android:padding="8dp"
                    android:src="@drawable/check_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/crossIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#4CAF50" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileStatusConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileDetailsText"
            android:layout_marginTop="12dp"
            android:visibility="visible"
            android:background="@drawable/bg_profile_status">
            <TextView
                android:id="@+id/profileStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text=""
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_margin="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>